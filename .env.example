# -- Brain --
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="AIzaSy..."

# Main orchestrator model
GEMINI_MODEL="gemini-2.0-flash"

# Research model (uses Google Search grounding - free on 2.5 Flash)
GEMINI_RESEARCH_MODEL="gemini-2.5-flash"

# -- Email Configuration --
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
EMAIL_USER="bot@gmail.com"
EMAIL_PASS="xxxx xxxx xxxx xxxx"

# IMAP/SMTP servers (defaults work for Gmail)
IMAP_SERVER="imap.gmail.com"
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587

# -- Security --
# Comma-separated list of emails allowed to control the agent
ALLOWED_SENDERS="you@example.com,family@example.com"

# Comma-separated list of emails allowed to use SystemAdminAgent
# (crontab, git pull, run tests, update dependencies)
# Leave empty to disable admin features for all users
ADMIN_EMAILS="you@example.com"

# -- Polling --
# How often to check for new emails (in seconds)
# 60 = 1 minute (good for research/reminders)
POLL_INTERVAL=60

# -- Calendar --
# Timezone for calendar events (IANA format)
TIMEZONE="America/New_York"

# Default calendar for events when no match found
DEFAULT_CALENDAR="primary"

# -- Task Processing --
# Max retries before moving unparseable tasks to failed/
MAX_TASK_RETRIES=3
